@model MusicApp.Models.Register

@{
    ViewData["Title"] = "Register";
}
<h3>Register</h3>
<form asp-action="Register" method="post">
    <div class="form-group">
        <label class="col-md-2">Email</label>
        <input asp-for="Username" class="form-control col-md-10" type="text" id="Username" value="" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-md-2">Password</label>
        <input asp-for="Password" class="form-control col-md-10" type="text" id="Username" value="" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-md-2">Confirm Password</label>
        <input asp-for="Password" class="form-control col-md-10" type="text" id="Username" value="" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a class="btn btn-default" asp-action="Home.Index">B</a>
    </div>
</form>