@model MusicApp.Models.Album

@{
    ViewBag["Title"] = "Edit";
}
<br />
<br />
<form asp-action="Edit" method="post">
    <div class="form-group">
        <input type="hidden" asp-for="AlbumID" />
        Title: <input asp-for="Title" value="@Model.Title" />
        <input type="hidden" asp-for="ArtistID" />
        Artist: <input asp-for="Artist" value="@Model.Artist.Name" /><br />
        <span asp-validation-for="Artist" class="text-danger"></span><br />
        Genre: <input asp-for="Genre" value="@Model.Genre.Name" /><br />
        Price: <input asp-for="Price" value="@Model.Price" />
        <br />
        <br />
        <input type="submit" value="Submit" />
    </div>
    <div class="form-group">
        <a class="btn btn-default" asp-action="Index">Back to List</a>
    </div>
</form>

