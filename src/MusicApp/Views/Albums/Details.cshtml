@model MusicApp.Models.Album
@{
    ViewData["Title"] = "Details";
}
<h3>Details</h3>
<div>
    <input type="hidden" asp-for="AlbumID" />
    Title: @Model.Title<br />
    Artist: @Model.Artist.Name<br />
    Artist Bio: @Model.Artist.Bio<br />
    Genre: @Model.Genre.Name<br />
    Likes: @Model.Like<br />
    Price: @Model.Price
    <br />
    <br />
</div>
<h3>You might also like these albums:</h3>
@foreach (var album in ViewBag.Suggestions)
{
    <ul>@album.Title</ul>
}
<div>
    <a class="btn btn-default" asp-action="Likes" asp-route-id="@Model.AlbumID">Like</a>
    <a class="btn btn-default" asp-controller="Playlists" asp-action="Add" asp-route-id="@Model.AlbumID">Playlist+</a>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.AlbumID">Edit</a>
    <a class="btn btn-default" asp-action="Index">Back to List</a>
</div>